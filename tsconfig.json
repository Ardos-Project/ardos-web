{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "./src",
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src"
  ]
}